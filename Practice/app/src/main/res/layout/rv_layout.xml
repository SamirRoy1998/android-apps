<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtRvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#1C2B7E"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRvDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="#0A490C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRvTitle" />

    <ImageButton
        android:id="@+id/iBtn1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#F43636"
        android:src="@drawable/ic_test"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iBtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRvDetail" />

    <ImageButton
        android:id="@+id/iBtn2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#B7FF63"
        android:src="@drawable/ic_test"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/iBtn3"
        app:layout_constraintStart_toEndOf="@+id/iBtn1"
        app:layout_constraintTop_toBottomOf="@+id/txtRvDetail" />

    <ImageButton
        android:id="@+id/iBtn3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="#5ACCFF"
        android:src="@drawable/ic_test"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iBtn2"
        app:layout_constraintTop_toBottomOf="@+id/txtRvDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>