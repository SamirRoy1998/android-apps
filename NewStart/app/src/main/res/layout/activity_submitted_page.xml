<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="submittedPage"
            type="com.example.newstart.SubmittedPageActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSubmittedPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        tools:context=".SubmittedPageActivity">

        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtA2Heading" />

        <TextView
            android:id="@+id/txtA2Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Application"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtA2NameHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: "
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtA2Name"
            app:layout_constraintEnd_toStartOf="@+id/txtA2Name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtA2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivUserPhoto"
            app:layout_constraintEnd_toStartOf="@+id/ivUserPhoto"
            app:layout_constraintStart_toEndOf="@+id/txtA2NameHeading" />

        <TextView
            android:id="@+id/txtA2AddressHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtA2Address"
            app:layout_constraintEnd_toStartOf="@+id/txtA2Address"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtA2Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtA2AddressHeading"
            app:layout_constraintTop_toBottomOf="@+id/txtA2Name" />

        <TextView
            android:id="@+id/txtA2DateOfBirthHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth: "
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtA2DateOfBirth"
            app:layout_constraintEnd_toStartOf="@+id/txtA2DateOfBirth"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtA2DateOfBirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtA2DateOfBirthHeading"
            app:layout_constraintTop_toBottomOf="@+id/txtA2Address" />

        <TextView
            android:id="@+id/txtA2PhoneNumberHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtA2PhoneNumber"
            app:layout_constraintEnd_toStartOf="@+id/txtA2PhoneNumber"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtA2PhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtA2PhoneNumberHeading"
            app:layout_constraintTop_toBottomOf="@+id/txtA2DateOfBirth" />

        <TextView
            android:id="@+id/txtA2BloodGroupHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group: "
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtA2BloodGroup"
            app:layout_constraintEnd_toStartOf="@+id/txtA2BloodGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtA2BloodGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtA2BloodGroupHeading"
            app:layout_constraintTop_toBottomOf="@+id/txtA2PhoneNumber" />

        <Button
            android:id="@+id/btnA2Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtA2BloodGroup" />

        <Button
            android:id="@+id/btnA2Apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>