<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4AD2"
    tools:context=".ForthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Four"
        android:textColor="#5931A0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnA4toA1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Page"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnA4toA2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnA4toA2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Page"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnA4toA3"
        app:layout_constraintStart_toEndOf="@+id/btnA4toA1" />

    <Button
        android:id="@+id/btnA4toA3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Page"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnA4toA2" />

</androidx.constraintlayout.widget.ConstraintLayout>